<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#3F51B5"
        android:padding="10dp"
        android:id="@+id/idTVHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/idTVHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/idTVCalculatorET"
            android:text="|"
            android:textColor="@color/teal_200"
            android:textStyle="bold"
            android:textSize="70sp"
            android:textAlignment="textEnd"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            >

            <Button
                android:layout_width="100dp"
                android:layout_margin="3dp"
                android:layout_height="100dp"
                android:id="@+id/idBtnDivide"
                android:text="/"
                android:textSize="40sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:id="@+id/idBtnMultiply"
                android:text="*"
                android:textSize="40sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/idBtnAdd"
                android:text="+"
                android:layout_margin="3dp"
                android:textSize="40sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/idBtnSub"
                android:text="-"
                android:layout_margin="3dp"
                android:textSize="40sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal">

            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn7"
                android:text="7"
                android:textSize="40sp"/>
            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn8"
                android:text="8"
                android:textSize="40sp"/>
            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn9"
                android:text="9"
                android:textSize="40sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal">

            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn4"
                android:text="4"
                android:textSize="40sp"/>
            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn5"
                android:text="5"
                android:textSize="40sp"/>
            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn6"
                android:text="6"
                android:textSize="40sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal">

            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn1"
                android:text="1"
                android:textSize="40sp"/>
            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn2"
                android:text="2"
                android:textSize="40sp"/>
            <Button
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:id="@+id/idBtn3"
                android:text="3"
                android:textSize="40sp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="fill_horizontal">
        <Button
            android:layout_width="137dp"
            android:layout_height="100dp"
            android:id="@+id/idBtn0"
            android:text="0"
            android:textSize="40sp"/>
        <Button
            android:layout_width="137dp"
            android:layout_height="100dp"
            android:id="@+id/idBtnDot"
            android:text="."
            android:textSize="40sp"/>

        <ImageButton
            android:id="@+id/idIBEqual"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@drawable/equal"
            android:scaleType="centerCrop"
            android:padding="30dp"
            android:backgroundTint="@color/teal_200"
            android:layout_gravity="right"
            />

    </LinearLayout>




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>